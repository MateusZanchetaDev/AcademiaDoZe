<Page x:Class="AcademiaDoZe.PageMatricula"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AcademiaDoZe"
      xmlns:resources="clr-namespace:AcademiaDoZe.Properties"
      mc:Ignorable="d"
      Title="PageMatricula" Height="817" Width="1096">

    <Grid Margin="0,0,-98,-104">
        <Label x:Name="LabelCadastrarMatricula" Foreground="White" Content="Cadastrar Matricula" HorizontalAlignment="Left" Margin="15,24,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Arial"/>
        <local:UserControlAluno HorizontalAlignment="Left" Margin="15,62,0,0" VerticalAlignment="Top" Width="806"/>
        <Label x:Name="LabelNome" Foreground="White" Content="Nome:" HorizontalAlignment="Left" Margin="13,134,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="26" Width="80"/>
        <TextBox x:Name="TextBoxNome" TabIndex="3" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" HorizontalAlignment="Left" Margin="15,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="389" Height="24" FontSize="16"/>
        <Label x:Name="LabelPlano" Foreground="White" Content="Plano:" HorizontalAlignment="Left" Margin="13,199,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="26" Width="80"/>

        <Border BorderBrush="Gray" BorderThickness="1" Margin="10,225,1069,587"/>

        <RadioButton x:Name="RadioButtonMensal" TabIndex="6" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" Foreground="White" Content="Mensal" Margin="23,237,1002,662" RenderTransformOrigin="0.5,0.5"/>

        <RadioButton x:Name="RadioButtonTrimestral" TabIndex="7" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" Foreground="White" Content="Trimestral" Margin="23,260,1002,642" RenderTransformOrigin="0.5,0.5"/>
