        <RadioButton x:Name="RadioButtonAnual" TabIndex="9" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" Foreground="White" Content="Anual" Margin="23,308,1002,594" RenderTransformOrigin="0.5,0.5"/>
        <Label x:Name="LabelEntrada" Foreground="White" Content="Entrada:" HorizontalAlignment="Left" Margin="141,199,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="22" Width="105"/>
        <DatePicker x:Name="DatePickerEntrada" TabIndex="4" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" HorizontalAlignment="Left" Margin="143,225,0,0" VerticalAlignment="Top" Width="263"/>
        <Label x:Name="LabelSaida" Foreground="White" Content="Saída:" HorizontalAlignment="Left" Margin="142,264,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="22" Width="80"/>
        <DatePicker x:Name="DatePickerSaida" TabIndex="5" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" HorizontalAlignment="Left" Margin="144,291,0,0" VerticalAlignment="Top" Width="261"/>
        <Label x:Name="LabelObjetivo" Foreground="White" Content="Objetivo:" HorizontalAlignment="Left" Margin="15,364,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="26" Width="153"/>
        <TextBox x:Name="TextBoxObjetivo" TabIndex="10" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" HorizontalAlignment="Left" Margin="15,395,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Height="95" FontFamily="Arial"/>
        <Label x:Name="LabelObservacaoRestricao" Foreground="White" Content="Observação Restrição:" HorizontalAlignment="Left" Margin="443,364,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="26" Width="181"/>
        <TextBox x:Name="TextBoxObservacaoRestricao" TabIndex="11" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" HorizontalAlignment="Left" Margin="443,395,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Height="95" FontFamily="Arial"/>
        <Button x:Name="ButtonSalvar" Content="Salvar" HorizontalAlignment="Left" Margin="622,508,0,0" VerticalAlignment="Top" Height="42" Width="212" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.006"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label x:Name="LabelRestricao" Foreground="White" Content="Restrição:" HorizontalAlignment="Left" Margin="568,74,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="26" Width="75"/>
        <CheckBox Foreground="White" x:Name="CheckBoxNenhum" Content="Nenhum" HorizontalAlignment="Left" Margin="568,103,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxProblemasCardiacos" Content="Problemas Cardíacos" HorizontalAlignment="Left" Margin="568,124,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
