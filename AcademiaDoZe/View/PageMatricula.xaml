        <CheckBox Foreground="White" x:Name="CheckBoxPressaoAlta" Content="Pressão Alta" HorizontalAlignment="Left" Margin="568,193,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxDiabetes" Content="Diabetes" HorizontalAlignment="Left" Margin="568,214,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxGravidez" Content="Gravidez" HorizontalAlignment="Left" Margin="568,236,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxLabirinto" Content="Labirinto" HorizontalAlignment="Left" Margin="568,259,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxAlergias" Content="Alergias" HorizontalAlignment="Left" Margin="568,282,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxRemedioUsoContinuo" Content="Remédios Uso Continuo" HorizontalAlignment="Left" Margin="568,304,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <CheckBox Foreground="White" x:Name="CheckBoxOutras" Content="Outras" HorizontalAlignment="Left" Margin="568,325,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="16" Width="163"/>
        <Border BorderBrush="White" BorderThickness="1" Margin="558,95,446,573"/>
        <Label x:Name="LabelLaudoMedico" Foreground="White" Content="Laudo Médico:" HorizontalAlignment="Left" Margin="789,139,0,0" VerticalAlignment="Top" FontFamily="Arial" RenderTransformOrigin="1.178,0.797" Height="26" Width="167"/>
        <Button x:Name="ButtonLaudoMedico" Content="Laudo Médico" HorizontalAlignment="Left" Margin="789,170,0,0" VerticalAlignment="Top" Height="19" Width="156"/>
        <TextBox x:Name="TextBoxLaudo" TabIndex="12" GotFocus="Box_GotFocus" LostFocus="Box_LostFocus" HorizontalAlignment="Left" Margin="789,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Height="24" FontSize="16"/>
    </Grid>
</Page>
